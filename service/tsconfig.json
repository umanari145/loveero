{
  "compilerOptions": {
    /* ベースオプション */
    "target": "ES2020",                       /* コンパイル後のJavaScriptバージョン */
    "module": "commonjs",                     /* 出力モジュール形式 */
    "lib": ["ES2020"],                        /* コンパイルに含めるライブラリ */
    "allowJs": true,                          /* JavaScriptファイルのコンパイルを許可 */
    "checkJs": false,                         /* JavaScript内のエラーを報告 */
    "outDir": "./dist",                       /* コンパイル後のファイル出力先 */
    "rootDir": "./src",                       /* ソースコードのルートディレクトリ */
    
    /* 厳格な型チェック */
    "strict": true,                           /* すべての厳格な型チェックオプションを有効化 */
    "noImplicitAny": true,                    /* 型が明示されていない場合にエラー */
    "strictNullChecks": true,                 /* null/undefinedを厳格にチェック */
    "strictFunctionTypes": true,              /* 関数の型チェックを厳格に */
    "strictBindCallApply": true,              /* bind, call, applyの型チェックを厳格に */
    "strictPropertyInitialization": true,     /* クラスプロパティ初期化の厳格なチェック */
    "noImplicitThis": true,                   /* this型が不明な場合にエラー */
    "alwaysStrict": true,                     /* 常に"use strict"モードで解析 */
    
    /* モジュール解決オプション */
    "moduleResolution": "node",               /* モジュール解決方法をNode.js形式に */
    "baseUrl": "./src",                       /* 非相対モジュール名の解決のベースディレクトリ */
    "paths": {                                /* ベースURLを基準とするパスマッピング */
      "@/*": ["*"]
    },
    "esModuleInterop": true,                  /* CommonJSモジュールとESモジュールの相互運用性 */
    "resolveJsonModule": true,                /* JSONモジュールのインポートを許可 */
    
    /* 追加オプション */
    "experimentalDecorators": true,           /* デコレータの実験的サポート（TypeORMなどに必要） */
    "emitDecoratorMetadata": true,            /* デコレータメタデータの出力（TypeORMなどに必要） */
    "skipLibCheck": true,                     /* 宣言ファイルのチェックをスキップ */
    "forceConsistentCasingInFileNames": true, /* ファイル名の大文字小文字の一貫性を強制 */
    "removeComments": true,                   /* コメントを削除 */
    "sourceMap": true                         /* ソースマップを出力 */
  },
  "include": [
    "src/**/*"                                /* コンパイル対象のファイル */
  ],
  "exclude": [
    "node_modules",                           /* コンパイル対象外のディレクトリ */
    "dist",
    "**/*.test.ts"                            /* テストファイルを除外（別途設定する場合） */
  ]
}